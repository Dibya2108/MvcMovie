            if (confirm("Are you sure to delete?")) {

                $.ajax({
                    /**/
                    url: '/ShowTime/DeleteShow?showTimeId=' + showTimeId,
                    /**/
                    type: "GET",
                    success: function (result) {
                        $('#showGrid').data('kendoGrid').dataSource.read();
                    }
                });
            }
